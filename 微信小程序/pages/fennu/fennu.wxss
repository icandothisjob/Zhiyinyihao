/* pages/fennu/fennu.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.title {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}


.image {
  width: 50%;
  height: 300rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.description {
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.ingredient {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-bottom: 5rpx;
  border: 1rpx solid #ccc; /* 添加边框 */
  border-radius: 5rpx; /* 设置边框圆角 */
  padding: 10rpx; /* 设置内边距 */
}

.check-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  align-items:flex-start; /* 左对齐 */
}

.highlight {
  font-weight: bold;
  font-family: "Arial Black", sans-serif;
}

.btn {
  background-color: #ffce47; /* 设置按钮背景颜色 */
  color: #ffffff; /* 设置按钮文字颜色 */
  font-size: 40rpx; /* 设置按钮文字大小 */
  padding: 10rpx 20rpx; /* 设置按钮内边距 */
  border: none; /* 去掉按钮边框 */
  border-radius: 5rpx; /* 设置按钮圆角 */
  cursor: pointer; /* 设置鼠标悬停样式 */
  width: 200px;
  height:50px;
}

.btn:hover {
  background-color: #ff4500; /* 设置鼠标悬停时的背景颜色 */
}