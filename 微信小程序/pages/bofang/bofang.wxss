.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f2f2f2;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 140px;
}

.button-container {
  display: flex;
  justify-content: space-between;
  width: 60%;
}

.control-button {
  background-color: transparent;
  border: none;
  padding: 10px;
  margin-bottom: 100px;
}

.icon {
  width: 50px; /* 调整图标的宽度 */
  height: 40px; /* 调整图标的高度 */
  display: block;
  
}
