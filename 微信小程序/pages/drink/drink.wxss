.nav {
  display: flex;
  flex-direction: row;
  text-align: center;
}
.nav-item {
  width: 25%;
  margin-top: 20px;
  font-size: 12px;
}
.head {
  display: flex;
  flex-direction: row;
  margin: 10px;
  font-size: 13px;
  color: #999999;
}

.scroll_box {
  background-color: transparent;
  width: 100%; /* Adjust width as needed, e.g., 80% */
  height: 300rpx; /* Set the height for the scroll bar */
  overflow: hidden;
  padding: 20rpx;
  white-space: nowrap;
}

.scroll_box scroll-view {
  height: 100%; /* Keep height consistent with .scroll_box */
  width: auto; /* Allow width to adapt to content */
  overflow: hidden;
}

.item_list image {
  border-radius: 20px; /* Add rounded corners to images */
  width: 100%; /* Adjust width to fill the container */
  height: 100%; /* Set height consistent with scroll bar */
  object-fit: cover; /* Maintain image aspect ratio */
}

.right {
  position: absolute;
  right: 10px;
  color: #999999;
}
/* Overall list container style */
.sees {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eaeaea; /* Add bottom border */
  background-color: transparent;
}
/* Image container style */
.sees image {
  width: 75px;
  height: 58px;
  border-radius: 4px; /* Add rounded corners to images */
  margin-right: 12px; /* Set space between image and description */
}
/* Description area style */
.desc {
  flex: 1;
  margin-left: 10px; /* Add left margin */
}
/* Title style */
.title {
  font-size: 16px;
  color: #ffd700;
  margin-bottom: 5px; /* Set space between title and type */
}
/* View and comment container style */
.count {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666;
}
/* View and comment text style */
.count view {
  margin-right: 10px; /* Set space between views and comments */
}

/* View count style */
.look {
  color: #999; /* View count color */
}

/* Comment count style */
.say {
  color: #999; /* Comment count color */
}

.search-bar {
  position: relative;
  top: 10px;
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  border-radius: 15px;
  padding: 5px 10px;
  margin: 10px;
}

.search-input {
  flex: 1;
  background-color: transparent;
  border: none;
  outline: none;
  padding: 10px;
  font-size: 14px;
}

.search-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.background {
  width: 100%;
  height: 100%;
  position: fixed; 
  background-size: 100% 100%;
  z-index: -1;
}
.search-bar {
  margin-bottom: 40px; /* Adjust spacing as needed */
}

.swiper {
  width: 100%;
}

.swiper-item {
  width: 100%;
}

.swiper-image {
  width: 100%;
  display: block;
}

/* New style for adjusting select button appearance and alignment */
.select-button {
  width: 60px;
  height: 30px;
  margin-left: 10px;
  background-color: #ffd700;
  color: #fff;
  border: none;
  border-radius: 5px;
  text-align: center;
  line-height: 30px; /* Vertically center text */
  font-size: 14px; /* Adjust text size */
}

/* New: Feedback effect when select button is pressed */
.select-button:active {
  background-color: #ffc107; /* Slightly darker color */
}

.list {
  margin-top: 30px; /* Adjust value as needed to increase distance from the top scroll display */
}
